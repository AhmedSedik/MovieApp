<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <import type="com.example.myapplication.util.MovieListType"/>
        <variable
            name="gotoInterface"
            type="com.example.myapplication.data.GoToMovie" />
        <variable
            name="viewModel"
            type="com.example.myapplication.ui.home.HomeViewModel" />
    </data>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/movieLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="48dp"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginRight="@dimen/content_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topMovieLayout">


            <TextView
                android:id="@+id/popular_movie_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_mono"
                android:text="@string/popular"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/view_all_popular_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="23dp"
                android:clickable="true"
                android:fontFamily="@font/roboto_mono"
                android:onClick="@{() -> viewModel.viewAll(MovieListType.POPULAR)}"
                android:text="@string/view_all"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/popular_movie_text"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popular_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:bind_load_more="@{viewModel::loadMorePopularMovies}"
                app:bind_movie_list="@{viewModel.popularMovieList}"
                app:bind_view_model="@{viewModel}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/popular_movie_text"
                tools:listitem="@layout/list_item_movie" />

            <ProgressBar
                android:id="@+id/popular_progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="@dimen/progress_bar"
                android:layout_height="@dimen/progress_bar"
                android:visibility="gone"
                app:bind_progress_visibility="@{viewModel.popularMovieList}"
                app:layout_constraintBottom_toBottomOf="@+id/popular_recycler_view"
                app:layout_constraintEnd_toEndOf="@+id/popular_recycler_view"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/popular_recycler_view"
                app:layout_constraintTop_toTopOf="@+id/popular_recycler_view"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>



   <!--     <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".40" />-->

</layout>